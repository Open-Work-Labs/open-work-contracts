{
	"name": "OpenQ-Contracts",
	"license": "MIT",
	"description": "OpenQ Contracts",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"ethnode": "hardhat node",
		"hardhat:clean": "hardhat clean",
		"start:docker": "nodemon --watch contracts -e sol --exec yarn deploy:docker",
		"hardhat:compile": "hardhat compile",
		"console:local": "hardhat console --network localhost",
		"accounts": "hardhat accounts --network localhost",
		"test": "hardhat test",
		"deploy:localhost": "yarn deploy-contracts:localhost && yarn deploy-contracts:localhost && yarn deploy-bounties:localhost && yarn fund-bounties:localhost",
		"deploy:docker": "rm -rf ./.openzeppelin/unknown-31337.json && yarn deploy-contracts:docker && yarn deploy-bounties:docker && yarn fund-bounties:docker",
		"deploy:mumbai": "rm -rf ./.openzeppelin/unknown-80001.json && yarn deploy-contracts:mumbai && yarn deploy-bounties:mumbai && yarn fund-bounties:mumbai",
		"deploy:polygon": "yarn deploy-contracts:polygon && yarn deploy-bounties:polygon && yarn fund-bounties:polygon",
		"deploy-contracts:docker": "hardhat run --network docker deploy/deploy_contracts.js",
		"deploy-bounties:docker": "hardhat run --network docker deploy/deploy_bounties.js",
		"fund-bounties:docker": "hardhat run --network docker deploy/fund_bounties.js",
		"deploy-contracts:mumbai": "hardhat run --network mumbai deploy/deploy_contracts.js",
		"deploy-bounties:mumbai": "hardhat run --network mumbai deploy/deploy_bounties.js",
		"fund-bounties:mumbai": "hardhat run --network mumbai deploy/fund_bounties.js",
		"deploy-contracts:polygon": "hardhat run --network polygon deploy/deploy_contracts.js",
		"deploy-bounties:polygon": "hardhat run --network polygon deploy/deploy_bounties.js",
		"fund-bounties:polygon": "hardhat run --network polygon deploy/fund_bounties.js",
		"deploy-contracts:localhost": "hardhat run --network localhost deploy/deploy_contracts.js",
		"deploy-bounties:localhost": "hardhat run --network localhost deploy/deploy_bounties.js",
		"fund-bounties:localhost": "hardhat run --network localhost deploy/fund_bounties.js"
	},
	"dependencies": {
		"@nomiclabs/hardhat-ethers": "^2.0.4",
		"@nomiclabs/hardhat-etherscan": "^3.0.0",
		"@nomiclabs/hardhat-waffle": "^2.0.1",
		"@openzeppelin/contracts": "^4.3.2",
		"@openzeppelin/contracts-upgradeable": "^4.4.1",
		"@openzeppelin/hardhat-upgrades": "^1.13.0",
		"chai": "^4.3.4",
		"dotenv": "^10.0.0",
		"ethereum-waffle": "^3.4.0",
		"ethers": "^5.5.3",
		"fs": "^0.0.1-security",
		"hardhat": "^2.6.2",
		"hardhat-tracer": "^1.0.0-alpha.6",
		"truffle-assertions": "^0.9.2"
	},
	"devDependencies": {
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"nodemon": "^2.0.15",
		"prettier": "^2.0.5"
	}
}